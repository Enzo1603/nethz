# Django Secret Key - Generate a new one for production!
# You can generate one at: https://djecrety.ir/
SECRET_KEY=your-secret-key-here

# Environment mode: development, testing, or production
ENVIRONMENT=development

# Production domains (comma-separated, required for production)
PRODUCTION_DOMAINS=localhost,127.0.0.1

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=your-email@gmail.com
EMAIL_USE_TLS=True

# Docker Configuration (for production deployment)
DOCKER_IMAGE=your-dockerhub-username/nethz:latest
